  <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
    <div class="col-xs-10 offset-1">
      <div class="form-group col-xs-9">
        <%= f.label :"会員ID", class: "col-sm-4" %>
        <%= f.label :"#{@customer.id}" %>
      </div>
      <div class="form-group col-xs-9">
        <%= f.label :"氏名", class: "col-sm-4 control-label" %>
        <%= f.text_field :first_name, class: "col-sm-3 form-control-static" %>  
        <%= f.text_field :last_name, class: "col-sm-3 form-control-static name" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"フリガナ", class: "col-sm-4 control-label" %>
        <%= f.text_field :first_name_kana, class: "col-sm-3 form-control-static name" %>
        <%= f.text_field :last_name_kana, class: "col-sm-3 form-control-static name" %>

      </div>
      
      
      
      <div class="form-group row">
        <%= f.label :"郵便番号", class:"col-4"%>
        <%= f.text_field :post_code, class:"col-4"%>
      </div>
      
      <div class="form-group row">
        <%= f.label :"電話番号", class:"col-4"%>
        <%= f.text_field :phone_number, class:"col-4"%>
      </div>
      
      <div class="form-group row">
        <%= f.label :"メールアドレス", class:"col-4"%>
        <%= f.email_field :email, class:"col-8"%>
      </div>


      <div class="form-group col-xs-9">
        <%= f.label :"会員ステータス", class: "col-sm-4 control-label" %>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効"%>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "退会" %>

      </div>
      <% end %>
    </div>
  </div>
</div>