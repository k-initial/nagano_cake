<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>
<h1>商品一覧</h1>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
      <% @items.each do |item| %>
      <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.non_taxed_price %></td>
          <td><%= item.genre.name %></td>
          <td>
              <% if item.is_sales_status == true %>
              <%= "販売中"%>
              <% else %>
              <%= "販売停止" %>
              <% end %>
          </td>
      </tr>
      <% end %>
  </tbody>
 </table>