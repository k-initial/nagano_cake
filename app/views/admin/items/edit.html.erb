<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <h2>新規登録</h2>
      <%= form_with model: @item, url: admin_item_path do |f| %>
      <div class="form-grop">
        <label for="item_image">商品画像</label>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      　<div class="form-group">
            <label for="">商品名</label>
            <%= f.text_field :name %>
        </div>
      　<div class="form-group">
          <label for="name">商品説明</label>
          <%= f.text_area :introduction, class: "form-control  book_body"%>
        </div>
        　<div class="form-group">
          <label for="name"></label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control  book_body"%>
        </div>
        <div class="form-group">
            <label for=""></label>
            <%= f.text_field :non_taxed_price, placeholder: "1000" %>円
        </div>
        
        <%= f.radio_button :is_sales_status, "true" %>
        <%= f.label :is_sales_status, "販売中" %>

        <%= f.radio_button :is_sales_status, "false" %>
        <%= f.label :is_sales_status, "販売停止中" %> <br>
        <%= f.submit "編集を保存", class: "btn" %>
      <% end %>
      
    </div>
  </div>
</div>
